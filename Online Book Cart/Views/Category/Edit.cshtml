@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            @* Show heading as Create Category*@
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @*To show all validation error messages in one place*@
        @*<div asp-validation-summary="ModelOnly"> </div>*@
        <div class="mb-3 row p-1">
            @*Show label for name*@
            <label asp-for="Name" class="p-0"></label>
            @*To get input for name field *@
            <input asp-for="Name" class="form-control" />
            @* Add validation error message*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            @*Show label for Display order*@
            <label asp-for="DisplayOrder" class="p-0"></label>
            @*To get input for Display order field *@
            <input asp-for="DisplayOrder" class="form-control" />
            @* Add validation error message*@
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                @*Add Submit button name as create*@
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                @*Call action method Index when Back to list button is pressed*@
                <a asp-controller="Category" asp-action="Index" class=" btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@* Added script for client site validation using javascript from shared folder*@
@section Scripts
    {
    @*Default location of partial view is shared folder inside view folder*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }

